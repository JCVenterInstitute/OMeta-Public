<!--  Datasource config for MySQL, borrowed from GUID                     -->
<!-- ==================================================================== -->
<datasources>
    <local-tx-datasource>
        <jndi-name>PWS_DBInterface_MySQL_DS</jndi-name>
        <connection-url>jdbc:mysql://mysql-lan-pro.jcvi.org/ifx_projects</connection-url>
        <driver-class>com.mysql.jdbc.Driver</driver-class>
        <user-name>ifx_projects_app</user-name>
        <password>----</password>
        <min-pool-size>1</min-pool-size>
        <max-pool-size>5</max-pool-size>
        <blocking-timeout-millis>10000</blocking-timeout-millis>
        <idle-timeout-minutes>5</idle-timeout-minutes>

        <exception-sorter-class-name>org.jboss.resource.adapter.jdbc.vendor.MySQLExceptionSorter</exception-sorter-class-name>

        <!-- corresponding type-mapping in the standardjbosscmp-jdbc.xml (optional) -->
        <metadata>
           <type-mapping>mySQL</type-mapping>
        </metadata>
    </local-tx-datasource>
</datasources>
